modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["c-ares", "cargo", "freetype", "grpc", "lcms2", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "libyaml", "openjpeg", "openssl", "pkg-config", "rustc", "tcl", "tk", "zlib", "mesa", "libGL", "xorg.libX11", "xorg.libXext", "xorg.libXrender", "libxkbcommon", "wayland", "xorg.libxcb", "fontconfig", "dbus", "glib", "xorg.libXcursor", "xcb-util-cursor", "qt6.qtbase", "xorg.xcbutilcursor", "xorg.xcbutilwm", "xorg.xcbutilimage", "xorg.xcbutilkeysyms", "xorg.xcbutilrenderutil"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BootForge GUI"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BootForge Web Server"

[[workflows.workflow]]
name = "BootForge GUI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --gui"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "BootForge Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 web_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["python3", "web_server.py"]
build = ["python", "-m", "pip", "install", "-r", "requirements.txt"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37697
externalPort = 3001

[[ports]]
localPort = 46617
externalPort = 3000
